---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('contact.title')}
  description={t('contact.description')}
>
  <article class="py-16 sm:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-neutral-900 mb-6">
          {t('contact.h1')}
        </h1>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('contact.intro')}
        </p>
      </header>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <div class="bg-neutral-900 rounded-3xl p-8 text-white">
            <h2 class="text-xl font-display font-bold mb-8">
              {lang === 'lv' ? 'Kontaktinformācija' : lang === 'ru' ? 'Контактная информация' : 'Contact information'}
            </h2>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-neutral-400 text-sm mb-1">{t('contact.email')}</p>
                  <a href="mailto:kristina.narmonte@gmail.com" class="text-white hover:text-primary-300 transition-colors font-medium break-all">
                    kristina.narmonte@gmail.com
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-neutral-400 text-sm mb-1">{t('contact.phone')}</p>
                  <a href="tel:+37120584384" class="text-white hover:text-primary-300 transition-colors font-medium">
                    +371 20 584 384
                  </a>
                </div>
              </div>

              <!-- Address -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-neutral-400 text-sm mb-1">{t('contact.address')}</p>
                  <p class="text-white">{t('contact.address.value')}</p>
                </div>
              </div>

              <!-- Social Links -->
              <div class="flex items-center gap-3 pt-2">
                <a href="https://wa.me/37120584384" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-xl text-white hover:bg-white/20 transition-colors text-sm">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                  WhatsApp
                </a>
                <a href="https://www.instagram.com/kristina.narmonte/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-xl text-white hover:bg-white/20 transition-colors text-sm">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                  Instagram
                </a>
              </div>
            </div>

            <div class="mt-8 pt-6 border-t border-white/10">
              <p class="text-neutral-400 text-sm">
                {t('contact.response')}
              </p>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <div class="bg-white rounded-3xl p-8 border border-neutral-100 shadow-sm">
            <h2 class="text-xl font-display font-bold text-neutral-900 mb-6">
              {t('contact.form.title')}
            </h2>
            <form class="space-y-5" name="contact" method="POST" data-netlify="true" data-netlify-recaptcha="true" action="/success/">
              <input type="hidden" name="form-name" value="contact" />
              <div>
                <label for="name" class="block text-sm font-medium text-neutral-700 mb-2">
                  {t('contact.form.name')}
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-neutral-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all bg-neutral-50 focus:bg-white"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">
                  {t('contact.form.email')}
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-neutral-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all bg-neutral-50 focus:bg-white"
                />
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 mb-2">
                  {t('contact.form.message')}
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 border border-neutral-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all resize-none bg-neutral-50 focus:bg-white"
                ></textarea>
              </div>
              <div data-netlify-recaptcha="true" class="flex justify-center"></div>
              <button
                type="submit"
                class="w-full px-8 py-4 bg-neutral-900 text-white font-medium rounded-xl hover:bg-neutral-800 transition-all shadow-sm hover:shadow-md"
              >
                {t('contact.form.submit')}
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Map -->
      <section class="mt-16">
        <h2 class="text-xl font-display font-bold text-neutral-900 mb-6">
          {t('contact.map.title')}
        </h2>
        <div class="aspect-[21/9] rounded-3xl overflow-hidden border border-neutral-200">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2829.777231678823!2d24.118647312901714!3d56.958320498389654!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46eecfceaf6aaa91%3A0x639b6db757c0b091!2zxKJlcnRyxatkZXMgaWVsYSA5LCBDZW50cmEgcmFqb25zLCBSxKtnYSwgTFYtMTAxMA!5e1!3m2!1slv!2slv!4v1765219933975!5m2!1slv!2slv"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Ģertrūdes iela 9, Rīga"
          ></iframe>
        </div>
      </section>
    </div>
  </article>
</Layout>
