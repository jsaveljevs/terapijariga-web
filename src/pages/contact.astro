---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('contact.title')}
  description={t('contact.description')}
>
  <article class="py-16 sm:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-neutral-900 mb-6">
          {t('contact.h1')}
        </h1>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('contact.intro')}
        </p>
      </header>

      <div class="grid lg:grid-cols-5 gap-12">
        <!-- Contact Info -->
        <div class="lg:col-span-2">
          <div class="bg-neutral-900 rounded-3xl p-8 text-white">
            <h2 class="text-xl font-display font-bold mb-8">
              {lang === 'lv' ? 'Kontaktinformācija' : lang === 'ru' ? 'Контактная информация' : 'Contact information'}
            </h2>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-neutral-400 text-sm mb-1">{t('contact.email')}</p>
                  <a href="mailto:you@terapijariga.lv" class="text-white hover:text-primary-300 transition-colors font-medium">
                    you@terapijariga.lv
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-neutral-400 text-sm mb-1">{t('contact.phone')}</p>
                  <a href="tel:+371XXXXXXXX" class="text-white hover:text-primary-300 transition-colors font-medium">
                    +371 XX XXX XXX
                  </a>
                </div>
              </div>

              <!-- Address -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-neutral-400 text-sm mb-1">{t('contact.address')}</p>
                  <p class="text-white">{t('contact.address.value')}</p>
                </div>
              </div>
            </div>

            <div class="mt-8 pt-6 border-t border-white/10">
              <p class="text-neutral-400 text-sm">
                {t('contact.response')}
              </p>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-3">
          <div class="bg-white rounded-3xl p-8 border border-neutral-100 shadow-sm">
            <h2 class="text-xl font-display font-bold text-neutral-900 mb-6">
              {t('contact.form.title')}
            </h2>
            <form class="space-y-5" action="#" method="POST">
              <div>
                <label for="name" class="block text-sm font-medium text-neutral-700 mb-2">
                  {t('contact.form.name')}
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-neutral-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all bg-neutral-50 focus:bg-white"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">
                  {t('contact.form.email')}
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-neutral-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all bg-neutral-50 focus:bg-white"
                />
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 mb-2">
                  {t('contact.form.message')}
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 border border-neutral-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all resize-none bg-neutral-50 focus:bg-white"
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full px-8 py-4 bg-neutral-900 text-white font-medium rounded-xl hover:bg-neutral-800 transition-all shadow-sm hover:shadow-md"
              >
                {t('contact.form.submit')}
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Map Placeholder -->
      <section class="mt-16">
        <h2 class="text-xl font-display font-bold text-neutral-900 mb-6">
          {t('contact.map.title')}
        </h2>
        <div class="aspect-[21/9] bg-neutral-100 rounded-3xl border border-neutral-200 flex items-center justify-center">
          <div class="text-center">
            <div class="w-16 h-16 bg-neutral-200 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <p class="text-neutral-500">
              {lang === 'lv' ? 'Google Maps tiks pievienota' : lang === 'ru' ? 'Google Maps будет добавлена' : 'Google Maps will be added'}
            </p>
          </div>
        </div>
      </section>
    </div>
  </article>
</Layout>
