---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('contact.title')}
  description={t('contact.description')}
>
  <article class="py-16 sm:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-3xl sm:text-4xl font-serif font-bold text-gray-900 mb-6">
          {t('contact.h1')}
        </h1>
        <p class="text-lg text-gray-600">
          {t('contact.intro')}
        </p>
      </header>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 mb-1">{t('contact.email')}</p>
                <a href="mailto:you@terapijariga.lv" class="text-primary-600 hover:underline font-medium">
                  you@terapijariga.lv
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 mb-1">{t('contact.phone')}</p>
                <a href="tel:+371XXXXXXXX" class="text-primary-600 hover:underline font-medium">
                  +371 XX XXX XXX
                </a>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 mb-1">{t('contact.address')}</p>
                <p class="text-gray-700">{t('contact.address.value')}</p>
              </div>
            </div>
          </div>

          <p class="text-sm text-gray-500 mt-6 p-4 bg-warm-50 rounded-lg">
            {t('contact.response')}
          </p>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-xl font-serif font-bold text-gray-900 mb-6">
            {t('contact.form.title')}
          </h2>
          <form class="space-y-4" action="#" method="POST">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                {t('contact.form.name')}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-warm-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                {t('contact.form.email')}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-warm-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                {t('contact.form.message')}
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-2 border border-warm-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
            >
              {t('contact.form.submit')}
            </button>
          </form>
        </div>
      </div>

      <!-- Map Placeholder -->
      <section class="mt-16">
        <h2 class="text-xl font-serif font-bold text-gray-900 mb-6">
          {t('contact.map.title')}
        </h2>
        <div class="aspect-video bg-warm-100 rounded-xl border border-warm-200 flex items-center justify-center">
          <!-- Google Maps iframe will be added here -->
          <p class="text-gray-500">
            {lang === 'lv' ? 'Google Maps tiks pievienota' : lang === 'ru' ? 'Google Maps будет добавлена' : 'Google Maps will be added'}
          </p>
        </div>
      </section>
    </div>
  </article>
</Layout>
