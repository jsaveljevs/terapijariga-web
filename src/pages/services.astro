---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

function getLocalizedUrl(locale: string, route: string): string {
  if (locale === 'lv') {
    return route === '/' ? '/' : route;
  }
  return route === '/' ? `/${locale}` : `/${locale}${route}`;
}
---

<Layout
  title={t('services.title')}
  description={t('services.description')}
>
  <article class="py-16 sm:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-16 text-center">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-neutral-900 mb-6">
          {t('services.h1')}
        </h1>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto leading-relaxed">
          {t('services.intro')}
        </p>
      </header>

      <!-- Services Grid -->
      <div class="space-y-6 mb-16">
        <!-- Individual Therapy -->
        <div class="bg-white rounded-3xl p-8 sm:p-10 border border-neutral-100 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start gap-5">
            <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-2xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-display font-bold text-neutral-900 mb-4">
                {t('services.individual.title')}
              </h2>
              <p class="text-neutral-600 mb-4 leading-relaxed">
                {t('services.individual.text1')}
              </p>
              <p class="text-neutral-600 leading-relaxed">
                {t('services.individual.text2')}
              </p>
            </div>
          </div>
        </div>

        <!-- Relationships -->
        <div class="bg-white rounded-3xl p-8 sm:p-10 border border-neutral-100 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start gap-5">
            <div class="w-14 h-14 bg-gradient-to-br from-pink-500 to-rose-500 rounded-2xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-display font-bold text-neutral-900 mb-4">
                {t('services.relationships.title')}
              </h2>
              <p class="text-neutral-600 mb-4 leading-relaxed">
                {t('services.relationships.text1')}
              </p>
              <p class="text-neutral-600 leading-relaxed">
                {t('services.relationships.text2')}
              </p>
            </div>
          </div>
        </div>

        <!-- Online Therapy -->
        <div class="bg-white rounded-3xl p-8 sm:p-10 border border-neutral-100 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start gap-5">
            <div class="w-14 h-14 bg-gradient-to-br from-violet-500 to-purple-500 rounded-2xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-display font-bold text-neutral-900 mb-4">
                {t('services.online.title')}
              </h2>
              <p class="text-neutral-600 mb-4 leading-relaxed">
                {t('services.online.text1')}
              </p>
              <p class="text-neutral-600 leading-relaxed">
                {t('services.online.text2')}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Practical Information -->
      <section class="mb-12">
        <div class="bg-neutral-50 rounded-3xl p-8 sm:p-10">
          <h2 class="text-xl font-display font-bold text-neutral-900 mb-6">
            {t('services.practical.title')}
          </h2>
          <div class="grid sm:grid-cols-2 gap-4">
            <div class="flex items-center gap-4 bg-white rounded-2xl p-4">
              <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-neutral-700">{t('services.practical.duration')}</span>
            </div>
            <div class="flex items-center gap-4 bg-white rounded-2xl p-4">
              <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-neutral-700">{t('services.practical.frequency')}</span>
            </div>
            <div class="flex items-center gap-4 bg-white rounded-2xl p-4">
              <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-neutral-700">{t('services.practical.price')}</span>
            </div>
            <div class="flex items-center gap-4 bg-white rounded-2xl p-4">
              <div class="w-10 h-10 bg-primary-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
              </div>
              <span class="text-neutral-700">{t('services.practical.payment')}</span>
            </div>
          </div>
          <p class="text-neutral-500 mt-6 text-sm">
            {t('services.practical.cta')}
          </p>
        </div>
      </section>

      <!-- Related Links -->
      <section class="mb-12">
        <div class="grid sm:grid-cols-2 gap-4">
          <a href={getLocalizedUrl(lang, '/about')} class="group bg-white rounded-2xl p-6 border border-neutral-100 hover:border-primary-200 hover:shadow-md transition-all">
            <h3 class="font-semibold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors">
              {t('nav.about')}
            </h3>
            <p class="text-sm text-neutral-500">
              {lang === 'lv' ? 'Uzziniet par manu pieeju un pieredzi' : lang === 'ru' ? 'Узнайте о моём подходе и опыте' : 'Learn about my approach and experience'}
            </p>
          </a>
          <a href={getLocalizedUrl(lang, '/faq')} class="group bg-white rounded-2xl p-6 border border-neutral-100 hover:border-primary-200 hover:shadow-md transition-all">
            <h3 class="font-semibold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors">
              {t('nav.faq')}
            </h3>
            <p class="text-sm text-neutral-500">
              {lang === 'lv' ? 'Atbildes uz biežākajiem jautājumiem' : lang === 'ru' ? 'Ответы на частые вопросы' : 'Answers to common questions'}
            </p>
          </a>
        </div>
      </section>

      <!-- CTA -->
      <div class="text-center">
        <a
          href={getLocalizedUrl(lang, '/contact')}
          class="inline-flex items-center justify-center px-8 py-4 bg-neutral-900 text-white font-medium rounded-2xl hover:bg-neutral-800 transition-all shadow-lg hover:shadow-xl"
        >
          {t('home.cta.book')}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </article>
</Layout>
