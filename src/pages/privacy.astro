---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('privacy.title')}
  description={t('privacy.description')}
>
  <article class="py-16 sm:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-3xl sm:text-4xl font-serif font-bold text-gray-900 mb-6">
          {t('privacy.h1')}
        </h1>
        <p class="text-gray-600">
          {t('privacy.intro')}
        </p>
      </header>

      <div class="prose prose-gray max-w-none">
        <!-- Data Processing -->
        <section class="mb-10">
          <h2 class="text-xl font-serif font-bold text-gray-900 mb-4">
            {t('privacy.data.title')}
          </h2>
          <p class="text-gray-600">
            {t('privacy.data.text')}
          </p>
        </section>

        <!-- Not Sold -->
        <section class="mb-10">
          <h2 class="text-xl font-serif font-bold text-gray-900 mb-4">
            {t('privacy.notsold.title')}
          </h2>
          <p class="text-gray-600">
            {t('privacy.notsold.text')}
          </p>
        </section>

        <!-- Security -->
        <section class="mb-10">
          <h2 class="text-xl font-serif font-bold text-gray-900 mb-4">
            {t('privacy.security.title')}
          </h2>
          <p class="text-gray-600">
            {t('privacy.security.text')}
          </p>
        </section>

        <!-- Cookies -->
        <section class="mb-10">
          <h2 class="text-xl font-serif font-bold text-gray-900 mb-4">
            {t('privacy.cookies.title')}
          </h2>
          <p class="text-gray-600">
            {t('privacy.cookies.text')}
          </p>
        </section>

        <!-- Rights -->
        <section class="mb-10">
          <h2 class="text-xl font-serif font-bold text-gray-900 mb-4">
            {t('privacy.rights.title')}
          </h2>
          <p class="text-gray-600">
            {t('privacy.rights.text')}
          </p>
        </section>

        <!-- Contact -->
        <section class="p-6 bg-warm-50 rounded-xl border border-warm-200">
          <h2 class="text-xl font-serif font-bold text-gray-900 mb-4">
            {t('privacy.contact.title')}
          </h2>
          <p class="text-gray-600">
            {t('privacy.contact.text')}
            <a href="mailto:you@terapijariga.lv" class="text-primary-600 hover:underline ml-1">
              you@terapijariga.lv
            </a>
          </p>
        </section>
      </div>
    </div>
  </article>
</Layout>
