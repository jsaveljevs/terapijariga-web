---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t('privacy.title')}
  description={t('privacy.description')}
>
  <article class="py-16 sm:py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl sm:text-5xl font-display font-bold text-neutral-900 mb-6">
          {t('privacy.h1')}
        </h1>
        <p class="text-neutral-600 leading-relaxed">
          {t('privacy.intro')}
        </p>
      </header>

      <div class="space-y-10">
        <!-- Data Processing -->
        <section>
          <h2 class="text-xl font-display font-bold text-neutral-900 mb-4">
            {t('privacy.data.title')}
          </h2>
          <p class="text-neutral-600 leading-relaxed">
            {t('privacy.data.text')}
          </p>
        </section>

        <!-- Not Sold -->
        <section>
          <h2 class="text-xl font-display font-bold text-neutral-900 mb-4">
            {t('privacy.notsold.title')}
          </h2>
          <p class="text-neutral-600 leading-relaxed">
            {t('privacy.notsold.text')}
          </p>
        </section>

        <!-- Security -->
        <section>
          <h2 class="text-xl font-display font-bold text-neutral-900 mb-4">
            {t('privacy.security.title')}
          </h2>
          <p class="text-neutral-600 leading-relaxed">
            {t('privacy.security.text')}
          </p>
        </section>

        <!-- Cookies -->
        <section>
          <h2 class="text-xl font-display font-bold text-neutral-900 mb-4">
            {t('privacy.cookies.title')}
          </h2>
          <p class="text-neutral-600 leading-relaxed">
            {t('privacy.cookies.text')}
          </p>
        </section>

        <!-- Rights -->
        <section>
          <h2 class="text-xl font-display font-bold text-neutral-900 mb-4">
            {t('privacy.rights.title')}
          </h2>
          <p class="text-neutral-600 leading-relaxed">
            {t('privacy.rights.text')}
          </p>
        </section>

        <!-- Contact -->
        <section class="bg-neutral-50 rounded-3xl p-8">
          <h2 class="text-xl font-display font-bold text-neutral-900 mb-4">
            {t('privacy.contact.title')}
          </h2>
          <p class="text-neutral-600">
            {t('privacy.contact.text')}
            <a href="mailto:you@terapijariga.lv" class="text-primary-600 hover:text-primary-700 font-medium ml-1">
              you@terapijariga.lv
            </a>
          </p>
        </section>
      </div>
    </div>
  </article>
</Layout>
