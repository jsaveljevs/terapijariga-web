---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';

const lang = 'en';
const t = useTranslations(lang);

function getLocalizedUrl(locale: string, route: string): string {
  if (locale === 'lv') {
    return route === '/' ? '/' : route;
  }
  return route === '/' ? `/${locale}` : `/${locale}${route}`;
}
---

<Layout title={t('services.title')} description={t('services.description')}>
  <article class="py-16 sm:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <header class="mb-12">
        <h1 class="text-3xl sm:text-4xl font-serif font-bold text-gray-900 mb-6">{t('services.h1')}</h1>
        <p class="text-lg text-gray-600">{t('services.intro')}</p>
      </header>

      <section class="mb-12">
        <div class="flex items-start gap-4 mb-4">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h2 class="text-2xl font-serif font-bold text-gray-900 pt-2">{t('services.individual.title')}</h2>
        </div>
        <div class="pl-16">
          <p class="text-gray-600 mb-4">{t('services.individual.text1')}</p>
          <p class="text-gray-600">{t('services.individual.text2')}</p>
        </div>
      </section>

      <section class="mb-12">
        <div class="flex items-start gap-4 mb-4">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h2 class="text-2xl font-serif font-bold text-gray-900 pt-2">{t('services.relationships.title')}</h2>
        </div>
        <div class="pl-16">
          <p class="text-gray-600 mb-4">{t('services.relationships.text1')}</p>
          <p class="text-gray-600">{t('services.relationships.text2')}</p>
        </div>
      </section>

      <section class="mb-12">
        <div class="flex items-start gap-4 mb-4">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </div>
          <h2 class="text-2xl font-serif font-bold text-gray-900 pt-2">{t('services.online.title')}</h2>
        </div>
        <div class="pl-16">
          <p class="text-gray-600 mb-4">{t('services.online.text1')}</p>
          <p class="text-gray-600">{t('services.online.text2')}</p>
        </div>
      </section>

      <section class="mb-12 p-6 bg-warm-50 rounded-xl border border-warm-200">
        <h2 class="text-xl font-serif font-bold text-gray-900 mb-4">{t('services.practical.title')}</h2>
        <ul class="space-y-3">
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span class="text-gray-700">{t('services.practical.duration')}</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
            <span class="text-gray-700">{t('services.practical.frequency')}</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span class="text-gray-700">{t('services.practical.price')}</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" /></svg>
            <span class="text-gray-700">{t('services.practical.payment')}</span>
          </li>
        </ul>
        <p class="text-gray-600 mt-4 pt-4 border-t border-warm-200">{t('services.practical.cta')}</p>
      </section>

      <div class="text-center">
        <a href={getLocalizedUrl(lang, '/contact')} class="inline-flex items-center justify-center px-8 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors shadow-sm">
          {t('home.cta.book')}
        </a>
      </div>
    </div>
  </article>
</Layout>
